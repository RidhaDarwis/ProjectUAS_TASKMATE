<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#023E73"
    tools:context=".TambahTugas">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#153B5D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/LogoAplikasi"
            android:layout_width="59dp"
            android:layout_height="53dp"
            android:src="@drawable/logo_aplikasi_transparant"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="56dp"
            android:layout_height="53dp"
            android:backgroundTint="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/logo_menu" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/judul_TambahTugas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAMBAH TUGAS"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.055" />

    <TextView
        android:id="@+id/judul_NamaMatkul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Mata Kuliah"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginStart="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judul_TambahTugas"
        app:layout_constraintVertical_bias="0.045" />
    <EditText
        android:id="@+id/etNamaMatkul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:background="@color/white"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/judul_NamaMatkul"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/judul_DeskripsiTugas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deskripsi Tugas"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginStart="30sp"
        android:layout_marginTop="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.00"
        app:layout_constraintVertical_bias="0.00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNamaMatkul" />
    <EditText
        android:id="@+id/etDeskripsiTugas"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:background="@color/white"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/judul_DeskripsiTugas"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/judul_TempatPengumpulan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tempat Pengumpulan"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginStart="30sp"
        android:layout_marginTop="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.00"
        app:layout_constraintVertical_bias="0.00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDeskripsiTugas"/>
    <EditText
        android:id="@+id/etTempatPengumpulan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:background="@color/white"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/judul_TempatPengumpulan"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/judul_Deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deadline"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginStart="30sp"
        android:layout_marginTop="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.00"
        app:layout_constraintVertical_bias="0.00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTempatPengumpulan"/>
    <EditText
        android:id="@+id/etDeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="70sp"
        android:background="@color/white"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/judul_Deadline"
        tools:layout_editor_absoluteX="0dp" />
    <ImageButton
        android:id="@+id/pilih_deadline"
        android:layout_width="27dp"
        android:layout_height="24dp"
        android:backgroundTint="#00FFFFFF"
        android:layout_marginEnd="33sp"
        app:layout_constraintHorizontal_bias="1.00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etDeadline"
        app:layout_constraintTop_toBottomOf="@+id/judul_Deadline"
        app:srcCompat="@drawable/kalender" />

    <Button
        android:id="@+id/buttonTambahTugas"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:text="TAMBAHKAN"
        android:textColor="#023E73"
        android:layout_marginTop="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDeadline"
        app:layout_constraintVertical_bias="0" />
    <Button
        android:id="@+id/buttonbatal"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="#00FFFFFF"
        android:text="BATAL"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:layout_marginTop="5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTambahTugas"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>